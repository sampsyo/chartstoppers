{% capture crap %}
{% comment %}Liquid is terrible.{% endcomment %}

{% capture mp3 %}audio/{{ ep.number }}.mp3{% endcapture %}
{% capture ogg %}audio/{{ ep.number }}.ogg{% endcapture %}

{% if site.data.podcast.podtrac %}
{% assign prefix = site.url | remove_first: 'http://' | remove_first: 'https://' %}
{% capture mp3 %}http://www.podtrac.com/pts/redirect.mp3/{{ prefix }}{{ mp3 }}{% endcapture %}
{% capture ogg %}http://www.podtrac.com/pts/redirect.ogg/{{ prefix }}{{ ogg }}{% endcapture %}
{% else %}
{% capture mp3 %}/{{ mp3 }}{% endcapture %}
{% capture ogg %}/{{ ogg }}{% endcapture %}
{% endif %}

{% capture synopsis %}{{ site.name }} #{{ ep.number }}: “{{ ep.title }}”{% endcapture %}
{% capture link %}{{ site.url }}{{ ep.number }}{% endcapture %}
{% capture newline %}
{% endcapture %}
{% assign excerpt = ep.content | split: newline | first %}
{% assign excerpt_plain = excerpt | markdownify | replace: '&amp;','and' | strip_html | strip_newlines %}

{% endcapture %}{% assign crap = nil %}
